@{
    ViewData["Title"] = "Ana Sayfa";
}
@model List<YemekSiparisSistemi.Models.Company>
<div class="container-fluid">
    <div class="row mb-1">
        <nav aria-label="breadcrumb" style="--bs-breadcrumb-divider: '>';">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Ana Sayfa</li>
            </ol>
        </nav>
    </div>
    <div class="row mb-3 d-flex flex-row align-items-center justify-content-between">
        <div class="col-12 col-md-6">
            <h6 class="text-truncate">Sipariş Verebileceğiniz Restoranlar</h6>
        </div>
        <div class="col-12 col-md-4">
            <div class="input-group input-group-sm">
                <input type="search" class="form-control shadow-none" placeholder="Bir restoran ara...">
                <button class="btn btn-outline-primary" type="button"><i class="bi bi-search"></i></button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-10 ">
            <div class="row">
                @foreach (var company in Model)
                {
                    <div class="col-12 col-sm-6 mb-3 col-lg-4">
                        <div class="card border-0 shadow">
                            <div class="card-header text-white text-center text-truncate" style="background-color:indigo; font-size:16px;">
                                @company?.Address?.Province?.ProvinceName
                            </div>
                            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                                <img src="/Logos/@company?.LogoPath" height="90" style="width:50%; object-fit:contain;" alt="Logo" />
                                <p class="card-text text-truncate" style="font-size:12px;">@company?.Address?.District?.DistrictName</p>
                                <p class="card-text text-truncate" style="font-size:12px;"><small class="text-body-secondary">@company?.Address?.Neighbourhood</small></p>
                            </div>
                            <div class="card-footer text-center" >
                                <a href="/Customer/Restaurants/@company?.Id" class="btn btn-outline-primary btn-sm text-truncate" style="font-size:12px;">
                                    <i class="uil uil-shopping-cart-alt"></i>
                                    Alışverişe Başla
                                </a>
                            </div>
                        </div>
