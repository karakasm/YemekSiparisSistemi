@model List<YemekSiparisSistemi.Models.Menu>

@foreach (var menu in Model)
{
    <div class="col-12 col-md-6 mb-3">
        <div class="card border-0 shadow">
            <div class="card-header text-truncate text-center text-white" style="font-size:18px; background-color:indigo;">
                @menu.MenuName
            </div>
            <div class="card-body d-flex justify-content-center">
                <img src="/Menus/@menu.CompanyId/@menu.MenuImage" height="120" style="width:50%; object-fit:contain;" />
            </div>
            <div class="card-footer d-flex flex-row align-items-center justify-content-between">
                <span class="text-truncate text-end" style="font-size:14px;"><strong>@menu.TotalPrice TL</strong></span>
                <a href="#" class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Detay</a>
            </div>
        </div>
    </div>
}
